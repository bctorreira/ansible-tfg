{{ ansible_managed | comment }}

global_defs {
    lvs_id proxy_HA
}

vrrp_script check_proxy {
  script "killall -0 proxysql"
  interval 1
}

vrrp_instance VI_01 {
    state {{ state }}
    interface {{ ansible_default_ipv4.interface }}
    virtual_router_id 51
    priority {{ priority }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1337
    }
    virtual_ipaddress {
        192.168.1.121/24
    }
    track_script {
        check_proxy
    }
}